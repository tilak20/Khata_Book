<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8ECFF"
    android:padding="@dimen/_10sdp"
    tools:context=".Insert_Data">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_12sdp"
            android:src="@drawable/ic_baseline_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="Details"
            android:textColor="#B26200ED"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            tools:ignore="MissingClass" />


        <androidx.cardview.widget.CardView
            android:id="@+id/CrdView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="#FAFBFF"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Customer Name"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CrdView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CrdView3"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/RL7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtCustomerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="#FAFBFF"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="Mobile Number"
                    android:paddingLeft="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp" />

                <ImageView
                    android:id="@+id/imgMessage"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_toStartOf="@id/imgPhone"
                    android:src="@drawable/ic_baseline_message_24" />

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/ic_baseline_phone_24" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CrdView13"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CrdView4"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <EditText
                android:id="@+id/edtMessage"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FAFBFF"
                android:ems="10"
                android:padding="@dimen/_10sdp"
                android:hint="Enter Message"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp" />

            <ImageView
                android:id="@+id/imgSMSCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_baseline_close_24" />

            <ImageView
                android:id="@+id/imgSMSSend"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/ic_baseline_send_24"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CrdView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CrdView13"
            android:layout_marginTop="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtItemName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#FAFBFF"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Item Name"
                android:paddingLeft="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LL6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_below="@id/CrdView5"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/CrdView6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:backgroundTint="#F9FAFE"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FAFBFF"
                    android:gravity="center_vertical"
                    android:hint="Quantity"
                    android:paddingLeft="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CrdView9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1"
                android:backgroundTint="#F9FAFE"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txtDateShow"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9FAFE"
                    android:gravity="center_vertical"
                    android:hint="Date"
                    android:paddingLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_17ssp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/CrdView7"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@id/LL6"
                android:background="#E7EBFE"
                android:gravity="center|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="#E7EBFE"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:id="@+id/txtGiveAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="#F9FAFE"
                    android:paddingLeft="@dimen/_20sdp"
                    android:ems="8"
                    android:hint="Amount"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="#000000"/>
            </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>